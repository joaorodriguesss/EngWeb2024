extends layout

block content
    .w3-card-4 
        header.w3-container.w3-amber
            h1 
                span.w3-amber Students List 
                a.w3-btn.w3-round.w3-khaki(href='/alunos/registo') +

        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Name
                    th TPC
                    th Teste 
                    th Pr√°tica 
                    th Final
                    th Actions 

                each aluno in lAlunos
                    tr
                        td= aluno.id
                        td.w3-deep-purple
                            a(href='/alunos/' + aluno.id)= aluno.nome
                        td= aluno.tpcTotal 
                        td= aluno.teste 
                        td= aluno.pratica 
                        td= aluno.final 
                        td 
                            span [
                            a(href='/alunos/edit/' + aluno.id) Edit
                            span ]
                            span [
                            a(href='/alunos/delete/' + aluno.id) Delete
                            span ]

        footer.w3-container.w3-deep-orange 
            h5 Generated by::EngWeb2024 in #{date}                  
