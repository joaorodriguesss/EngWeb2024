extends layout

block content
	.w3-card-4
		header.w3-container.w3-blue 
			h1= titulo
		
		.w3-container
			table.w3-table-all
				tr 
					th ID
					th Nome
					th Actions
				
				each compositor in periodo.compositores 
					tr
						td
							a(href='/compositores/' + compositor.id)= compositor.id
						td= compositor.nome
						td
							a.w3-button.w3-blue(href='/compositores/editar/' + compositor.id) Editar
							| 
							a.w3-button.w3-blue(href='/compositores/apagar/' + compositor.id) Apagar

		footer.w3-container.w3-blue
			address Gerado por A100711 em #{data}
			a.w3-button.w3-blue(href='javascript:history.back()') Voltar
			br
